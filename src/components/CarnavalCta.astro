<script is:inline>
  // CTA Countdown timer - synced with hero
  const ctaEndDate = new Date("2026-02-18T23:59:59-05:00").getTime();

  function updateCtaCountdown() {
    const now = new Date().getTime();
    const distance = ctaEndDate - now;

    if (distance <= 0) {
      document.getElementById("cta-countdown-days").textContent = "00";
      document.getElementById("cta-countdown-hours").textContent = "00";
      document.getElementById("cta-countdown-minutes").textContent = "00";
      document.getElementById("cta-countdown-seconds").textContent = "00";
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.getElementById("cta-countdown-days").textContent = String(days).padStart(2, "0");
    document.getElementById("cta-countdown-hours").textContent = String(hours).padStart(2, "0");
    document.getElementById("cta-countdown-minutes").textContent = String(minutes).padStart(2, "0");
    document.getElementById("cta-countdown-seconds").textContent = String(seconds).padStart(2, "0");
  }

  updateCtaCountdown();
  setInterval(updateCtaCountdown, 1000);
</script>
